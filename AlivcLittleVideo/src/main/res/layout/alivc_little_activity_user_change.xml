<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_little_action_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="@string/alivc_new_nickname"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="93.5dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:hint="@string/alivc_little_input_nickname"
        android:textColorHint="#26ffffff"
        android:textSize="14dp"
        android:background="@drawable/alivc_little_nickname_input_background"/>


</RelativeLayout>