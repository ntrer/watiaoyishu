<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/alivc_little_dialog_share_bg"
        >
        <ImageView
            android:id="@+id/cancel"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/aliyun_svideo_icon_effect_cancel"/>
        <TextView
            android:id="@+id/tv_effect_title"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="分享"
            android:textColor="@color/white_alpha_0"
            android:layout_gravity="center"
            />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/alivc_line_gray_light"/>
    <LinearLayout
        android:background="@color/alivc_little_dialog_share_bg"
        android:layout_width="match_parent"
        android:gravity="center"

        android:layout_height="160dp">
        <LinearLayout
            android:id="@+id/alivc_little_share_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/alivc_little_iv_download"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/alivc_little_icon_download"/>
            <TextView
                android:id="@+id/alivc_little_tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_little_save_loacal"
                android:textColor="@color/alivc_little_text_gray"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/alivc_little_icon_weixin"/>

        <LinearLayout
            android:id="@+id/alivc_little_share_delete"
            android:layout_width="0dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/alivc_little_icon_share_delete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alivc_little_share_delete"
                android:textColor="@color/alivc_little_text_gray"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>