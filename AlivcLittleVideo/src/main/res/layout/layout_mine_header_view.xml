<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_little_user_center_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/iv_mine_change_avatar"
            android:layout_width="28.5dp"
            android:layout_height="28.5dp"
            android:scaleType="fitXY"
            android:layout_alignRight="@id/iv_little_user_center_avatar"
            android:layout_alignBottom="@id/iv_little_user_center_avatar"
            android:src="@mipmap/alivc_icon_mine_change_avatar"
            android:layout_alignEnd="@id/iv_little_user_center_avatar" />

        <TextView
            android:id="@+id/tv_little_mine_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_little_user_center_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#c3c5c6"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_little_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="22.5dp"
            android:layout_below="@id/tv_little_mine_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_little_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" /> 

        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>