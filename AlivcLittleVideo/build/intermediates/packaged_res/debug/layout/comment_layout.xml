<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345条评论"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/aliyun_svideo_icon_effect_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_comments"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_380">

    </android.support.v7.widget.RecyclerView>

   <RelativeLayout
      android:layout_below="@+id/rv_comments"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_52">

      <TextView
          android:id="@+id/write_comment"
          android:layout_width="@dimen/dp_300"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:gravity="center_vertical"
          android:text="输入评论..."
          android:layout_marginLeft="@dimen/dp_16"
          android:textColor="@color/alivc_line_gray"
          android:paddingLeft="@dimen/dp_10"
          />

         <ImageView
             android:id="@+id/at"
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             android:src="@mipmap/at"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="@dimen/dp_16"
             />

   </RelativeLayout>

</RelativeLayout>