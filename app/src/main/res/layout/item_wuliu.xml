<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_wuliu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_w"
    android:layout_height="@dimen/dp_100">
    


    
    <RelativeLayout
        android:id="@+id/timeline"
        android:layout_width="@dimen/dp_16"
        android:layout_height="match_parent">


        <View
            android:id="@+id/line_top"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_8"
            android:background="#FFE5E5E5"
            android:layout_centerHorizontal="true"
            />

        
        <ImageView
            android:id="@+id/dot"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_below="@+id/line_top"
            android:src="@mipmap/yiyundao"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_below="@+id/dot"
            android:id="@+id/line_bottom"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#FFE5E5E5"
            android:layout_centerHorizontal="true"
            />
        
    </RelativeLayout>


    <TextView
        android:id="@+id/zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="派送中"
        android:textColor="#ff686868"
        android:textSize="@dimen/dp_14"
        android:layout_toEndOf="@+id/timeline"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/content"
        android:layout_toEndOf="@+id/timeline"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@+id/zhuangtai"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快件到达 有问题请联系派送中快件到达合肥，正发往江苏.合肥，正发往江苏."
        android:textColor="#ff686868"
        android:textSize="@dimen/dp_12"
        />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02-13 09:00:34"
        android:textColor="#ff959595"
        android:textSize="@dimen/dp_12"
        android:layout_toEndOf="@+id/timeline"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@+id/content"
        android:layout_marginTop="@dimen/dp_5"
        />

</RelativeLayout>