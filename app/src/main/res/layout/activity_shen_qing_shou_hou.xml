<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context=".activity.ShenQingShouHouActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="申请售后"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />


    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_154"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/layout_border2"
                >

                <RelativeLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">

                    <TextView
                        android:id="@+id/dingdanhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号：1213243434"
                        android:textColor="#ff686868"
                        android:textSize="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#FFF4F4F4"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/dingdan_content"
                    android:layout_below="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_78"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    >


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dingdan_pic"
                        android:layout_width="@dimen/dp_78"
                        android:layout_height="@dimen/dp_78"
                        app:riv_corner_radius="@dimen/dp_4"
                        android:src="@mipmap/memgwa"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/dingdan_name"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_width="@dimen/dp_224"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_height="wrap_content"
                        android:text="户外探索跑步短裤户外探索跑户外探 索跑步短裤户外探索跑"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_14"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />


                    <TextView
                        android:id="@+id/biaozhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_10"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/danjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199"
                        android:layout_toEndOf="@+id/biaozhi"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_16"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_16"

                        />

                    <TextView
                        android:id="@+id/jifen_biaozhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:layout_toEndOf="@+id/jifen"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        />


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="×1"
                        android:textColor="#ff959595"
                        android:textSize="@dimen/dp_14"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>





            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/yunyin"
                android:layout_below="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_167"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/color_w"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >


                <EditText
                    android:padding="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_167"
                    android:textColorHint="#FFCCCCCC"
                    android:textColor="@color/textColor4"
                    android:hint="请尽量细致的描述您的问题留下联系方式，以方便我们 的客服人员联系你。"
                    android:textCursorDrawable="@drawable/my_cursor3"
                    android:textSize="@dimen/dp_12"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:background="@null"
                    android:gravity="top|left"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/pic"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@+id/yunyin"
                android:layout_width="match_parent"
                android:background="@drawable/layout_border2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_70"
                android:layout_height="@dimen/dp_141">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">

                    <TextView
                        android:id="@+id/pic_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传凭证"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_18"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(最多不超过5张)"
                        android:textColor="#ff959595"
                        android:textSize="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/pic_title"
                        android:layout_marginLeft="@dimen/dp_3"
                        />

                    <ImageView
                        android:id="@+id/tianjia"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/tianjia"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp_16"
                        />

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/header"
                    android:layout_width="match_parent"
                    android:id="@+id/rv_pic"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="@dimen/dp_90">

                </android.support.v7.widget.RecyclerView>


            </RelativeLayout>



        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>



    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/color_w"
        android:layout_height="@dimen/dp_60">

        <Button
            android:id="@+id/submit"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_gravity="center"
            android:background="@drawable/btn_border2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="提交"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/color_w"
            />
    </LinearLayout>


</RelativeLayout>