<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_w"
    android:layout_marginBottom="@dimen/dp_16"
    >


    <RelativeLayout
        android:layout_width="@dimen/dp_165"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/pic"
           android:layout_width="@dimen/dp_165"
           android:layout_height="@dimen/dp_122"
           android:src="@mipmap/memgwa"
           android:scaleType="centerCrop"
           app:riv_corner_radius="@dimen/dp_4"
           />

       <TextView
           android:id="@+id/time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="08.13 ~ 09.22"
           android:textColor="#ffffffff"
           android:textSize="@dimen/dp_12"
           android:layout_marginTop="@dimen/dp_100"
           android:layout_marginLeft="@dimen/dp_12"
           />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年第十届少儿唱比赛16强大区"
        android:textColor="#ff2e2d2d"
        android:textSize="@dimen/dp_14"
        android:layout_below="@+id/pic"
        android:layout_marginTop="@dimen/dp_3"
        android:lineSpacingExtra="@dimen/dp_4"
        />


    <LinearLayout
        android:id="@+id/dingwei"
        android:layout_below="@+id/name"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/dizhi"
            />


        <TextView
            android:id="@+id/chengshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="#ff2e2d2d"
            android:textSize="@dimen/dp_12"
            />
        
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费"
        android:textColor="#ff3ab065"
        android:textSize="@dimen/dp_14"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/dingwei"
        android:visibility="gone"
        />

   <LinearLayout
       android:layout_alignParentEnd="true"
       android:layout_alignBottom="@+id/dingwei"
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:layout_height="wrap_content">


       <TextView
       android:layout_width="12dp"
       android:layout_height="17dp"
       android:text="￥"
       android:textColor="#ffed1c2f"
       android:textSize="@dimen/dp_12"
       android:layout_marginRight="@dimen/dp_2"
       />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="99"
           android:textColor="#ffed1c2f"
           android:textSize="@dimen/dp_18"
           />

   </LinearLayout>


     <TextView
         android:background="@drawable/text_border3"
         android:layout_width="@dimen/dp_48"
         android:text="预热中"
         android:gravity="center"
         android:textStyle="bold"
         android:textColor="#ffffffff"
         android:textSize="@dimen/dp_10"
         android:layout_height="@dimen/dp_19"/>

    </RelativeLayout>

</RelativeLayout>