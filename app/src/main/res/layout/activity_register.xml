<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_w"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_137"
        android:layout_height="@dimen/dp_53"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/caiyi_logo"
        android:layout_marginTop="@dimen/dp_109"
        />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/txt_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="@dimen/dp_345"
        android:layout_marginBottom="@dimen/dp_30"
        android:hint="请输入手机号"
        android:theme="@style/UpdateUserEditText"
        android:textColor="@color/md_black_1000"
        android:textColorHint="#959595"
        android:textSize="@dimen/dp_14"
        android:inputType="phone"
        android:layout_height="@dimen/dp_45"/>



    <RelativeLayout
        android:id="@+id/yzm"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_below="@+id/txt_phone"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txt_yzm"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_345"
            android:hint="请输入验证码"
            android:theme="@style/UpdateUserEditText"
            android:textColor="@color/md_black_1000"
            android:textColorHint="#959595"
            android:textSize="@dimen/dp_14"
            android:inputType="number"
            android:maxLength="6"
            android:layout_height="@dimen/dp_45"/>


        <TextView
            android:id="@+id/huoqu_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3AB065"
            android:text="获取验证码"
            android:textSize="@dimen/dp_12"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>


    <Button
        android:id="@+id/login"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
       android:layout_below="@+id/yzm"
        android:background="@drawable/btn_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="注册/登录"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/color_w"
        android:clickable="false"
        />


    <RelativeLayout
        android:id="@+id/other"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_123"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_height="wrap_content">

        <View
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式注册/登陆"
            android:textColor="@color/textColor5"
            android:textSize="@dimen/dp_12"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />


        <View
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/wechat"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@mipmap/wechat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登陆"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/textColor2"
            android:layout_marginTop="@dimen/dp_5"
            />

    </LinearLayout>



</RelativeLayout>