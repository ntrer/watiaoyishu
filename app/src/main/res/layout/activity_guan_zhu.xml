<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_w"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fuhao"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />


    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:background="@drawable/layout_border"
        android:layout_margin="@dimen/dp_15"
        android:focusable="true"
       android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/sousuoguanzhu"
            />


        <com.watiao.yishuproject.ui.SLEditTextView
            android:id="@+id/txt_souuo"
           android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:theme="@style/UpdateUserEditText"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="text"
            android:hint="请输入要@的好友昵称"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textColor="@color/textColor6"
            android:textColorHint="@color/textColor6"
            android:textSize="@dimen/dp_12"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="@dimen/dp_25"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你关注的人"
        android:textColor="@color/textColor5"
        android:layout_below="@id/search_title"
        android:textSize="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        />



    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycleview"
            android:background="@color/color_w"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>





</RelativeLayout>