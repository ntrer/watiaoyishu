<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_w"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单支付"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/zhifuchenggong"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/baomingchengong"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="支付成功"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:gravity="center"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/zhifuchenggong"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/textColor6"
            />

        <TextView
            android:id="@+id/dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_13"
            android:textColor="@color/textColor4"
            android:layout_marginLeft="@dimen/dp_5"
            android:textStyle="bold"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:text="付款时间:2019-06-12 12:00"
        android:textSize="@dimen/dp_12"
        android:gravity="center"
        android:textColor="#959595"
        />

    <View
        android:layout_above="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/beijing_jianbian2"
        android:layout_marginBottom="@dimen/dp_10"
        />

    <Button
        android:id="@+id/login"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/btn_border2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="查看订单"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/color_w"
        />


</RelativeLayout>