<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/color_w"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/user_headr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_152"
            android:background="@color/color_w"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_pic"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/memgwa"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蛙小雨"
                android:textColor="#ff2e2d2d"
                android:textSize="@dimen/dp_22"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/user_pic"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <LinearLayout
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/user_pic"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/zuobiao_img"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:src="@mipmap/zuobiao"
                    />


                <TextView
                    android:id="@+id/zuibiao_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:text="北京"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_5"
                    />

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_16"
                />



            <LinearLayout
                android:id="@+id/xinxi"
               android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_26"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_16"
                        android:text="8"
                        android:textColor="@color/textColor4"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="年龄(岁)"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor2"
                        android:layout_below="@+id/year"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_3"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/shengao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold"
                        android:text="120"
                        android:textColor="@color/textColor4"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高(厘米)"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor2"
                        android:layout_below="@+id/shengao"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_3"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tizhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_16"
                        android:text="34"
                        android:textColor="@color/textColor4"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重(kg)"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor2"
                        android:layout_below="@+id/tizhong"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_3"
                        />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@drawable/layout_border21"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/defen"
            android:layout_below="@+id/user_headr"
            android:background="@color/color_w"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_102">

            <RelativeLayout
                android:id="@+id/depiaoshu"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@mipmap/piaoshu_bg"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_width="@dimen/dp_174"
                android:visibility="gone"
                android:layout_height="@dimen/dp_102">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/piaoshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_18"
                        android:text="143"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_20"
                        android:shadowColor="#3342732a"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/piaoshu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:layout_height="17dp"
                        android:text="当前票数"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_12"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/toupiaocai"
                    android:layout_marginLeft="@dimen/dp_117"
                    android:layout_marginTop="@dimen/dp_35"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/defenshu"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/piaoshu_bg"
                android:layout_width="@dimen/dp_174"
                android:layout_marginLeft="@dimen/dp_6"
                android:visibility="visible"
                android:layout_height="@dimen/dp_102">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fenshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_18"
                        android:text="143"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_20"
                        android:shadowColor="#3342732a"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/fenshu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:layout_height="17dp"
                        android:text="当前评分"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_12"
                        />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/paiming"
               android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/paiming_bg"
                android:layout_width="@dimen/dp_174"
                android:visibility="visible"
                android:layout_height="@dimen/dp_102">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/paihang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_18"
                        android:text="143"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_20"
                        android:shadowColor="#3342732a"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/paihang"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:layout_height="17dp"
                        android:text="当前排名"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_12"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/paihangbang_white"
                    android:layout_marginLeft="@dimen/dp_117"
                    android:layout_marginTop="@dimen/dp_35"
                    />


            </RelativeLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_below="@+id/defen"
            android:id="@+id/title"
            android:background="@color/color_w"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">

            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center"
                android:background="@color/weixin"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参赛作品"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold"
                android:textColor="@color/textColor4"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/xiaobiaoqian"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text"
                />

            <ImageView
                android:id="@+id/tianjia"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/tianjiashipin"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_16"
                />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiugai"
                android:layout_toLeftOf="@+id/tianjia"
                android:layout_marginRight="@dimen/dp_16"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shipin"
            android:layout_below="@+id/title"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="@dimen/dp_193">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/shipin_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:riv_corner_radius="@dimen/dp_4"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是简介这是简介这是简介这是简介这是简这是简介这是简介这是简介这是简介这是简介这是"
                android:textColor="#ffffffff"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/dp_12"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/caiyi_logo"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/shipin"
            android:layout_marginTop="@dimen/dp_40"
            />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>