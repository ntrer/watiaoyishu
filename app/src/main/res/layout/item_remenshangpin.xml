<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_w"
    android:layout_marginTop="@dimen/dp_10"
    >

   <RelativeLayout
       android:id="@+id/content"
       android:orientation="vertical"
       android:layout_width="@dimen/dp_172"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content">

       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/pic"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_172"
           android:src="@mipmap/memgwa"
           android:scaleType="fitXY"
           app:riv_corner_radius="@dimen/dp_4"
           />

   </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_50">


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐辅导音乐辅导音乐辅导音乐辅导"
            android:maxLines="1"
            android:maxEms="13"
            android:ellipsize="end"
            android:textSize="@dimen/dp_14"
            />


       <RelativeLayout
           android:layout_marginTop="@dimen/dp_5"
           android:layout_below="@+id/goods_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/jifen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="200"
               android:textSize="@dimen/dp_16"
               android:textColor="@color/red"
               android:textStyle="bold"
               android:layout_centerVertical="true"
               />

           <TextView
               android:id="@+id/jifen_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="积分"
               android:textSize="@dimen/dp_12"
               android:textColor="@color/red"
               android:layout_centerVertical="true"
               android:textStyle="bold"
               android:layout_toRightOf="@+id/jifen"
               android:layout_marginLeft="@dimen/dp_3"
               />

           <TextView
               android:id="@+id/yuanjia"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="8000积分"
               android:textSize="@dimen/dp_12"
               android:textColor="#959595"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/jifen_title"
               android:layout_marginLeft="@dimen/dp_5"
               />

       </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>