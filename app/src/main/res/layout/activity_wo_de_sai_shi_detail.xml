<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_320"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/movie_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                android:fitsSystemWindows="true"
                app:statusBarScrim="@color/colorPrimary"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">



                <ImageView
                    android:id="@+id/movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/saishi_bg"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5" />
                
                
                <RelativeLayout
                    android:id="@+id/bangdan"
                    android:layout_marginTop="@dimen/dp_170"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_width="@dimen/dp_94"
                    android:background="@drawable/layout_border2"
                    android:layout_height="@dimen/dp_32">

                    <ImageView
                        android:id="@+id/bangdan_pic"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/paiming"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看榜单"
                        android:textColor="#2E2D2D"
                        android:textSize="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/bangdan_pic"
                        android:layout_marginLeft="@dimen/dp_6"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/xinxi"
                    android:background="@drawable/layout_border3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_220"
                    android:layout_height="@dimen/dp_110">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/biaoti"
                            android:layout_width="278dp"
                            android:layout_height="wrap_content"
                            android:text="蛙跳2019年第十届少儿唱比赛间音乐届山东省"
                            android:textColor="#ff2e2d2d"
                            android:textSize="@dimen/dp_16"
                            android:textStyle="bold"
                            android:lineSpacingExtra="@dimen/dp_3"
                            />


                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/dp_16"
                            android:text="199"
                            android:textColor="#ffed1c2f"
                            android:textSize="@dimen/dp_22"
                            android:textStyle="bold"
                            />


                        <TextView
                            android:id="@+id/biaozhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="#ffed1c2f"
                            android:textSize="@dimen/dp_16"
                            android:layout_toLeftOf="@+id/money"
                            android:layout_marginTop="@dimen/dp_7"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="2018. 08.13 ~ 2018. 09.22"
                            android:textColor="#ff959595"
                            android:textSize="@dimen/dp_13"
                            />

                        <TextView
                            android:id="@+id/chengshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北京"
                            android:textColor="#ff2e2d2d"
                            android:textSize="@dimen/dp_12"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/dp_18"
                            />


                        <ImageView
                            android:layout_toLeftOf="@+id/chengshi"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_10"
                            android:src="@mipmap/zuobiao"
                            android:layout_marginRight="@dimen/dp_3"
                            />


                    </RelativeLayout>

                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="赛事详情"
                        android:textColor="@color/color_w"
                        android:textSize="@dimen/dp_18"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/share"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dp_10"
                        />

                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>



        <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true"-->
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->


        <include layout="@layout/wodesaishi_header"/>


        <!--</android.support.v4.widget.NestedScrollView>-->




    </android.support.design.widget.CoordinatorLayout>





</RelativeLayout>