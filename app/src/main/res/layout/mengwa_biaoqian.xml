<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_w"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <View
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center"
            android:background="@color/weixin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="萌娃标签"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/textColor4"
            android:layout_marginLeft="@dimen/dp_15"
            />

         <ImageView
             android:layout_width="@dimen/dp_9"
             android:layout_height="@dimen/dp_12"
             android:src="@mipmap/xiaobiaoqian"
             android:layout_gravity="center"
             android:layout_marginLeft="@dimen/dp_5"
             />

    </LinearLayout>


    <com.donkingliang.labels.LabelsView
        android:id="@+id/labels"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        app:labelBackground="@drawable/layout_border4"
        app:labelTextColor="@color/weixin"
        app:labelTextSize="@dimen/dp_12"
        app:labelTextPaddingBottom="@dimen/dp_5"
        app:labelTextPaddingLeft="@dimen/dp_15"
        app:labelTextPaddingRight="@dimen/dp_15"
        app:labelTextPaddingTop="@dimen/dp_5"
        app:lineMargin="@dimen/dp_10"
        app:wordMargin="@dimen/dp_10"
        app:selectType="NONE"
        app:maxLines="2"
       />



</RelativeLayout>