<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单支付"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />


    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/shouhuodizhi"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/layout_border2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_76">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="孙大圣"
            android:textSize="@dimen/dp_14"
            android:textColor="#1A1726"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/name"
            android:text="18637280068"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#686868"
            />

        <TextView
            android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：河南省安阳市万达广场万达中心720"
            android:textSize="@dimen/dp_12"
            android:textColor="#959595"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_15"
            />


        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/edit"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:layout_gravity="center"
                android:textColor="@color/textColor5"
                android:textSize="@dimen/dp_12"
                />
        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/no_shouhuodizhi"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/layout_border2"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="@dimen/dp_76">

        <ImageView
            android:id="@+id/dizhi_pic"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/dizhi"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无收货地址"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dizhi_pic"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/textColor5"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/arrow"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goods"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/layout_border2"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_pic"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_78"
            android:src="@mipmap/memgwa"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            app:riv_corner_radius="@dimen/dp_6"
            />

        <TextView
            android:id="@+id/good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:text="户外探索跑步户外探索跑步户外探索"
            android:textColor="#1A1726"
            android:textSize="@dimen/dp_14"
            android:layout_toRightOf="@+id/goods_pic"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            />


        <TextView
            android:id="@+id/jifen_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_pic"
            android:text="199"
            android:textSize="@dimen/dp_16"
            android:layout_toRightOf="@+id/goods_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:layout_marginLeft="@dimen/dp_3"
            android:textSize="@dimen/dp_10"
            android:layout_toRightOf="@+id/jifen_danjia"
            android:layout_alignBaseline="@+id/jifen_danjia"
            android:textColor="@color/red"
            />


        <TextView
            android:id="@+id/yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥8888"
            android:textSize="@dimen/dp_12"
            android:layout_toRightOf="@+id/fuhao"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_alignBaseline="@+id/jifen_danjia"
            android:textColor="@color/textColor6"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignBottom="@id/jifen_danjia"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_26">

            <Button
                android:id="@+id/jian"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:background="@drawable/layout_border8"
                android:text="—"
                android:textColor="@color/textColor6"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/count"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:cursorVisible="false"
                android:text="1"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/textColor6"
                android:background="@drawable/layout_border10"
                />

            <Button
                android:id="@+id/jia"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/textColor6"
                android:background="@drawable/layout_border9"
                android:layout_height="match_parent"/>

        </LinearLayout>



        <View
            android:id="@+id/line"
            android:layout_below="@+id/goods_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/background3"
            />


        <RelativeLayout
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递方式"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="#1A1726"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_14"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递免邮"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/textColor6"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_14"
                />

        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_below="@+id/goods"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/layout_border2"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textSize="@dimen/dp_14"
            android:textColor="#1A1726"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />


        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/jinbi"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor6"
                android:text="总计"
                android:textSize="@dimen/dp_12"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="238积分"
                android:layout_gravity="center"
                android:textColor="@color/md_yellow_700"
                />

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_14"
        android:src="@mipmap/caiyi_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_78"
        />


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/color_w"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:id="@+id/zonge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总额"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/zongjifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zonge"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignBaseline="@+id/zonge"
            android:text="199"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_22"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:text="积分"
            android:textColor="@color/red"
            android:layout_toRightOf="@+id/zongjifen"
            android:layout_alignBaseline="@+id/zongjifen"
            android:layout_marginLeft="@dimen/dp_5"
            />


        <Button
            android:id="@+id/login"
            android:background="@drawable/btn_border"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="积分不足"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/color_w"
            android:clickable="false"
            />

    </RelativeLayout>




</RelativeLayout>