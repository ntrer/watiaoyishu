                        android:text="微信支付"
                        android:layout_toRightOf="@+id/weixin_pic"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/textColor4"
                        android:layout_centerVertical="true"
                        />

                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        app:duration="1"
                        app:color_tick="@color/color_w"
                        app:color_checked="@color/weixin"
                        app:color_unchecked_stroke="@color/line"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/background3"
                    />

                <RelativeLayout
                    android:id="@+id/zhifubao"
                    android:background="@color/color_w"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_49">

                    <ImageView
                        android:id="@+id/zhifubao_pic"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/zhifubao"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝"
                        android:layout_toRightOf="@+id/zhifubao_pic"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/textColor4"
                        android:layout_centerVertical="true"
                        />


                    <cn.refactor.library.SmoothCheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        app:duration="1"
                        app:color_tick="@color/color_w"
                        app:color_checked="@color/weixin"
                        app:color_unchecked_stroke="@color/line"
                        />

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/queren"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_100"
                android:layout_below="@+id/zhifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <cn.refactor.library.SmoothCheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    app:duration="1"
                    android:layout_marginEnd="@dimen/dp_5"
                    app:color_tick="@color/color_w"
                    app:color_checked="@color/weixin"
                    app:color_unchecked_stroke="@color/line"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请确认报名信息所言真实"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_toRightOf="@+id/checkbox"
                    />



            </RelativeLayout>

