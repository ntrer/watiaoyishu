        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/color_w"
        android:layout_height="@dimen/dp_68">

        <TextView
            android:id="@+id/zonge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总额"
            android:textColor="#ff2e2d2d"
            android:textSize="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/zonge_biaozhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ffed1c2f"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/zonge"
            android:layout_marginLeft="@dimen/dp_10"
        />

        <TextView
            android:id="@+id/zonge_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="199"
            android:textColor="#ffed1c2f"
            android:textSize="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/zonge_biaozhi"
            />

        <Button
            android:id="@+id/login"
            android:background="@drawable/btn_border2"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center"
            android:text="报名支付"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_14"
            />


