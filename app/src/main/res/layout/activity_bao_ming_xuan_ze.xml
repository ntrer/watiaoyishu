                    android:textSize="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <ImageView
                    android:id="@+id/tianjia"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/tianjia"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_mengwa"
                android:layout_below="@+id/xuanzemengwa"
                android:layout_width="match_parent"
                android:background="@color/color_w"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_mengwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_16"
                    >

                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/rv_mengwa"
                    android:id="@+id/rv_mengwa2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:visibility="gone"
                    >

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/zhankai"
                android:layout_below="@+id/rl_mengwa"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_w"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dp_36">

                <RelativeLayout
                    android:background="@drawable/layout_border15"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="@dimen/dp_26">

                    <ImageView
                        android:id="@+id/zhankaijiantou"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_7"
                        android:src="@mipmap/zhankaisanjiao"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
