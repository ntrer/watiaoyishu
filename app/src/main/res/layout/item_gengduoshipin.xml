<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_w"
    android:layout_marginTop="@dimen/dp_16"
    >

   <RelativeLayout
       android:id="@+id/content"
       android:orientation="vertical"
       android:layout_centerHorizontal="true"
       android:layout_width="@dimen/dp_164"
       android:layout_height="@dimen/dp_218">

       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/pic"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@mipmap/memgwa"
           android:scaleType="centerCrop"
           app:riv_corner_radius="@dimen/dp_6"
           />


       <LinearLayout
          android:layout_alignParentBottom="true"
           android:layout_marginLeft="@dimen/dp_10"
           android:layout_marginBottom="@dimen/dp_10"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/user_pic"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:src="@mipmap/memgwa"
               android:layout_gravity="center"
               />

           <TextView
               android:id="@+id/name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="孙大圣"
               android:layout_marginLeft="@dimen/dp_5"
               android:textSize="@dimen/dp_12"
               android:textColor="@color/color_w"
               />

       </LinearLayout>

       <LinearLayout
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="@dimen/dp_12"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="@dimen/dp_10"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="@dimen/dp_14"
               android:layout_height="@dimen/dp_15"
               android:src="@mipmap/toupiao"
               android:layout_gravity="center"
               />

           <TextView
               android:id="@+id/piaoshu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="1233"
               android:layout_marginLeft="@dimen/dp_5"
               android:textSize="@dimen/dp_12"
               android:textColor="@color/color_w"
               />

       </LinearLayout>

   </RelativeLayout>


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_30">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号:"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_10"
            />


        <TextView
            android:id="@+id/bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="030"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_25"
            />

        <Button
            android:id="@+id/toupiao"
            android:background="@drawable/btn_border2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="投票"
            android:gravity="center"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/color_w"
            android:clickable="false"
            />

        <Button
            android:id="@+id/yitoupiao"
            android:background="@drawable/btn_border"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="已投票"
            android:gravity="center"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/color_w"
            android:clickable="false"
            android:visibility="gone"
            />

    </RelativeLayout>


</RelativeLayout>