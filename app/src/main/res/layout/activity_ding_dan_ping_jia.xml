<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="评价"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />


    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@color/color_w"
        android:layout_height="@dimen/dp_200">

        <EditText
            android:id="@+id/text"
            android:padding="@dimen/dp_15"
            android:layout_width="match_parent"
            android:textColorHint="@color/textColor2"
            android:textColor="@color/textColor4"
            android:textCursorDrawable="@drawable/my_cursor3"
            android:textSize="@dimen/dp_12"
            android:hint="请输入您的评价  (最多200字)"
            android:lineSpacingExtra="@dimen/dp_6"
            android:background="@null"
            android:gravity="top|left"
            android:layout_height="match_parent"/>


    </RelativeLayout>





    <ImageView
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:layout_centerHorizontal="true"
        />


    <RelativeLayout
        android:id="@+id/quit"
        android:layout_alignParentBottom="true"
        android:background="@color/color_w"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">

        <Button
            android:id="@+id/login"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/btn_border2"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="确认发布"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/color_w"
            />

    </RelativeLayout>



</RelativeLayout>