<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context=".activity.BaoBeiXiangQingActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宝贝详情"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/share"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/share"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            />

    </android.support.v7.widget.Toolbar>




    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_w"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/user_headr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_144"
                android:background="@color/color_w"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_pic"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/memgwa"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蛙小雨"
                    android:textColor="#ff2e2d2d"
                    android:textSize="@dimen/dp_22"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/user_pic"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

                <LinearLayout
                    android:layout_below="@+id/name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@+id/user_pic"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/zuobiao_img"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:src="@mipmap/zuobiao"
                        />


                    <TextView
                        android:id="@+id/zuibiao_dizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="北京"
                        android:textColor="#ff686868"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_5"
                        />

                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_35"
                   android:layout_marginRight="@dimen/dp_16"
                    />



                <LinearLayout
                    android:id="@+id/shuzhi"
                    android:layout_below="@+id/user_pic"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:text="8"
                            android:textColor="@color/textColor4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="年龄(岁)"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/textColor2"
                            android:layout_below="@+id/year"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_3"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/shengao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/dp_16"
                            android:textStyle="bold"
                            android:text="120"
                            android:textColor="@color/textColor4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身高(厘米)"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/textColor2"
                            android:layout_below="@+id/shengao"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_3"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tizhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_16"
                            android:text="34"
                            android:textColor="@color/textColor4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体重(kg)"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/textColor2"
                            android:layout_below="@+id/tizhong"
                            android:textStyle="bold"
                            android:textSize="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_3"
                            />


                    </RelativeLayout>

                </LinearLayout>




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@drawable/layout_border20"
                android:layout_below="@+id/shuzhi"
                />

            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/piaoshu_bg"
                android:layout_width="@dimen/dp_184"
                android:layout_height="@dimen/dp_102">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_34"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/piaoshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="143"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_20"
                        android:shadowColor="#3342732a"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/piaoshu"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:layout_height="17dp"
                        android:text="当前票数"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/dp_12"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/toupiaocai"
                    android:layout_marginLeft="@dimen/dp_127"
                    android:layout_marginTop="@dimen/dp_42"
                    />


            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/title"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center"
                    android:background="@color/weixin"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/cansaizuopin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参赛作品"
                    android:layout_gravity="center"
                    android:textSize="@dimen/dp_17"
                    android:textStyle="bold"
                    android:textColor="@color/textColor4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_toEndOf="@+id/cansaizuopin"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/xiaobiaoqian"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    />


                <ImageView
                    android:id="@+id/tianjiashipin"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/tianjiashipin"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/bianjishipin"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/xiugai"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tianjiashipin"
                    />


            </RelativeLayout>

          <RelativeLayout
              android:layout_marginLeft="@dimen/dp_16"
              android:layout_marginRight="@dimen/dp_16"
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/dp_16"
              android:layout_height="@dimen/dp_193">

              <com.makeramen.roundedimageview.RoundedImageView
                  android:id="@+id/shipin_pic"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:riv_corner_radius="@dimen/dp_4"
                  android:scaleType="centerCrop"
                  />

              <TextView
                  android:id="@+id/jianjie"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="这是简介这是简介这是简介这是简介这是简这是简介这是简介这是简介这是简介这是简介这是"
                  android:textColor="#ffffffff"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:layout_marginLeft="@dimen/dp_16"
                  android:layout_marginRight="@dimen/dp_16"
                  android:layout_marginBottom="@dimen/dp_16"
                  android:layout_alignParentBottom="true"
                  android:textSize="@dimen/dp_12"
                  />

          </RelativeLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/caiyi_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_30"
                />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


<LinearLayout
    android:layout_alignParentBottom="true"
    android:background="@color/color_w"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/dp_76">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:id="@+id/line"
        android:background="@drawable/layout_border19"
        />

    <RelativeLayout
        android:background="@color/color_w"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68">


        <Button
            android:id="@+id/login"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_border2"
            android:layout_below="@+id/yzm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="投票"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/color_w"
            android:clickable="false"
            />

    </RelativeLayout>

</LinearLayout>

</RelativeLayout>