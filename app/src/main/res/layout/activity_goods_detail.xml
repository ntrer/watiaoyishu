<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_370"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/movie_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                android:fitsSystemWindows="true"
                app:statusBarScrim="@color/colorPrimary"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">



                <ImageView
                    android:id="@+id/movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/saishi_bg"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5" />


                <LinearLayout
                    android:id="@+id/xinxi"
                    android:background="@drawable/layout_border3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_222"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/biaoti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="蛙跳2019年第十届少儿唱比赛间音乐届山东省"
                            android:textColor="#ff2e2d2d"
                            android:textSize="@dimen/dp_18"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/dp_3"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_32">


                        <TextView
                            android:id="@+id/biaozhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="#ffed1c2f"
                            android:textSize="@dimen/dp_14"
                           android:layout_alignParentBottom="true"
                            />

                        <TextView
                            android:id="@+id/jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="199"
                            android:textColor="#ffed1c2f"
                            android:textSize="@dimen/dp_26"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_5"
                            />

                        <TextView
                            android:id="@+id/yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥8996"
                            android:textColor="#ff959595"
                            android:textSize="@dimen/dp_12"
                            android:layout_toEndOf="@+id/jiage"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:layout_marginLeft="@dimen/dp_8"
                            />

                        <TextView
                            android:id="@+id/kucun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存:1213"
                            android:textColor="#ff959595"
                            android:textSize="@dimen/dp_12"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/dp_3"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/daohang"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        >

                        <RelativeLayout
                            android:id="@+id/shangpin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_130"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/shangpin_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品"
                                android:textStyle="bold"
                                android:textSize="@dimen/dp_14"
                                android:textColor="@color/app_text_color"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />

                            <View
                                android:id="@+id/shangpin_line"
                                android:layout_below="@+id/shangpin_text"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_3"
                                android:background="@color/weixin"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/pingjia"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dp_212"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/pingjia_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评价"
                                android:textStyle="bold"
                                android:textSize="@dimen/dp_14"
                                android:textColor="@color/textColor6"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />

                            <View
                                android:id="@+id/pingjia_line"
                                android:layout_below="@+id/pingjia_text"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_3"
                                android:background="@color/color_w"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_8"
                        android:background="@drawable/beijing_jianbian2"
                        />

                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >


                    <LinearLayout
                        android:id="@+id/daohang2"
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="?attr/actionBarSize"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:id="@+id/shangpin2"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/shangpin_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品"
                                android:textStyle="bold"
                                android:textSize="@dimen/dp_14"
                                android:textColor="@color/color_w"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/pingjia2"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/pingjia_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评价"
                                android:textStyle="bold"
                                android:textSize="@dimen/dp_14"
                                android:textColor="@color/divider_line_d4"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/dp_5"
                                />


                        </RelativeLayout>

                    </LinearLayout>



                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>



        <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true"-->
        <!--app:layout_behavior="@string/appbar_scrolling_view_behavior">-->


        <include layout="@layout/shangpin_header"/>


        <!--</android.support.v4.widget.NestedScrollView>-->






    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>