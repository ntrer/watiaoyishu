<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_w"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <View
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center"
            android:background="@color/weixin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人经历"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/textColor4"
            android:layout_marginLeft="@dimen/dp_15"
            />

         <ImageView
             android:layout_width="@dimen/dp_12"
             android:layout_height="@dimen/dp_14"
             android:src="@mipmap/xiaobiaoqian"
             android:layout_gravity="center"
             android:layout_marginLeft="@dimen/dp_5"
             />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/paishe"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:minHeight="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_img1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/paishejingli"
            />

        <ImageView
            android:id="@+id/edit1"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ps_edit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/title_img1"
            android:text="拍摄经历"
            android:textColor="#ff2e2d2d"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/paishe_img1"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/yuanhu"
            android:layout_below="@+id/title_img1"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toEndOf="@+id/title_img1"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/paishejingli"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_img1"
            android:text="2010年5月电视剧「小猫大猫」饰演小猫2010年5月电视剧「小猫大猫」饰演小猫"
            android:textColor="#ff686868"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textSize="@dimen/dp_12"
            android:layout_toEndOf="@+id/paishe_img1"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/yanyi"
        android:layout_below="@+id/paishe"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:minHeight="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edit2"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ps_edit"
            />

        <ImageView
            android:id="@+id/title_img2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/yanyijingli"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/title_img2"
            android:text="演艺经历"
            android:textColor="#ff2e2d2d"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/yanyi_img"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/yuanhu"
            android:layout_below="@+id/title_img2"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toEndOf="@+id/title_img2"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/yangyijingli"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_img2"
            android:text="2010年5月电视剧「小猫大猫」饰演小猫"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="#ff686868"
            android:textSize="@dimen/dp_12"
            android:layout_toEndOf="@+id/yanyi_img"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/huojiang"
        android:layout_below="@+id/yanyi"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:minHeight="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/title_img3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/huojiangjingli"
            />

        <ImageView
            android:id="@+id/edit3"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ps_edit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/title_img3"
            android:text="获奖经历"
            android:textColor="#ff2e2d2d"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/huojiang_img"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/yuanhu"
            android:layout_below="@+id/title_img3"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toEndOf="@+id/title_img3"
            android:layout_marginLeft="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/huojiangjingli"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_img3"
            android:text="2010年5月电视剧「小猫大猫」饰演小猫"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="#ff686868"
            android:textSize="@dimen/dp_12"
            android:layout_toEndOf="@+id/huojiang_img"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/title2"
        android:orientation="horizontal"
        android:layout_below="@id/huojiang"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <View
            android:id="@+id/line_photo"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:background="@color/weixin"
            />

        <TextView
            android:id="@+id/photo_title"
            android:layout_toEndOf="@+id/line_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片展示"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/textColor4"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:layout_toEndOf="@+id/photo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="(最多10张)"
            android:textColor="#ff686868"
            android:textSize="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            />


        <ImageView
            android:id="@+id/img_add"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
           android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/ps_add"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_toLeftOf="@+id/img_add"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/ps_edit"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

     <android.support.v7.widget.RecyclerView
         android:id="@+id/rv_pic"
         android:layout_below="@+id/title2"
         android:layout_width="match_parent"
         android:layout_marginLeft="@dimen/dp_16"
         android:layout_marginRight="@dimen/dp_16"
         android:layout_height="@dimen/dp_150">

     </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/title3"
        android:orientation="horizontal"
        android:layout_below="@id/rv_pic"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">

        <View
            android:id="@+id/line_video"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:background="@color/weixin"
            />

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频展示"
           android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/line_video"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:textColor="@color/textColor4"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <ImageView
           android:layout_width="@dimen/dp_9"
           android:layout_height="@dimen/dp_12"
           android:layout_toEndOf="@+id/video_title"
           android:layout_centerVertical="true"
           android:src="@mipmap/xiaobiaoqian"
           android:layout_marginLeft="@dimen/dp_5"
            />

        <ImageView
            android:id="@+id/vid_add"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/ps_add"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/vid_edit"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_toLeftOf="@+id/vid_add"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/ps_edit"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_video"
        android:layout_below="@+id/title3"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:minHeight="@dimen/dp_230"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_15"
        android:src="@mipmap/caiyi_logo"
        android:layout_below="@+id/rv_video"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        />

</RelativeLayout>