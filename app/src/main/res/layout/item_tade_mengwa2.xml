<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_192"
    android:layout_height="@dimen/dp_130"
    android:background="@color/color_w"
    android:layout_marginLeft="-5dp"
    >

    <RelativeLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mengwa_bg"
        >


        <RelativeLayout
            android:id="@+id/pic"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_46"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:src="@mipmap/touxiang_ph"
                android:id="@+id/uesr_pic"
                />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/touxiang_biaoqian"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑勇"
            android:textColor="#ff000000"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_96"
            />

        <RelativeLayout
            android:layout_below="@+id/pic"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_width="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/photo_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#ff2e2d2d"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold"
                />

            <TextView
                android:layout_below="@+id/photo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="照片"
                android:textColor="#ff959595"
                android:textSize="@dimen/dp_12"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/pic"
            android:layout_marginLeft="@dimen/dp_102"
            android:layout_width="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">

            <TextView
               android:id="@+id/video_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#ff2e2d2d"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold"
                />

            <TextView
                android:layout_below="@+id/video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:text="视频"
                android:textColor="#ff959595"
                android:textSize="@dimen/dp_12"
                />


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>