<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/user_xinxi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/memgwa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:text="野食小哥"
            android:textColor="#fffcaa14"
            android:textSize="@dimen/dp_14"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/user_shipin"
        android:layout_width="@dimen/dp_244"
        android:layout_height="@dimen/dp_324"
        android:layout_below="@+id/user_xinxi"
        android:layout_marginTop="@dimen/dp_10"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/dp_244"
            android:layout_height="@dimen/dp_324"
            android:scaleType="centerCrop"
            android:src="@mipmap/memgwa"
            app:riv_corner_radius="@dimen/dp_4"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="办公室小野部在禁止出口泰国大象10多年后,放松限制,允许以“研…"
            android:textColor="@color/color_w"
            android:textSize="14sp"
            />

    </RelativeLayout>

    <View
        android:layout_below="@+id/user_shipin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/line"
        />


</RelativeLayout>