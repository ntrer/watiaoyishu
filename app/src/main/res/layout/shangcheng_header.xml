<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        />

    <RelativeLayout
        android:id="@+id/jifenlan"
        android:layout_below="@+id/banner"
        android:background="@drawable/layout_border12"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/stars"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/jifen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/textColor4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_35"
            />

        <TextView
            android:id="@+id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textColor="@color/md_orange_500"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/jifen_title"
            android:layout_marginLeft="@dimen/dp_6"
            />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/arrow"/>

    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_below="@+id/jifenlan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/backgroundColor2"
        />


    <LinearLayout
        android:id="@+id/fenlei"
        android:orientation="horizontal"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">

        <LinearLayout
            android:id="@+id/quanbushangpin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/stars"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>


            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="全部商品"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shipin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/stars"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>


            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="食品"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tushu"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/stars"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>


            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="图书"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wenju"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/stars"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>


            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="文具"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wanju"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/stars"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>


            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="玩具"
                android:textColor="#6B6B6F"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门商品"
        android:textColor="@color/textColor4"
        android:textStyle="bold"
        android:textSize="@dimen/dp_18"
        android:layout_below="@+id/fenlei"
        android:layout_marginLeft="@dimen/dp_10"
        />

</RelativeLayout>