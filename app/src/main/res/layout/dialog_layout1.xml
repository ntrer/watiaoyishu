<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:background="@drawable/layout_border2"
              style="@style/AppTheme.NoActionBar4"
              android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ext_dialog_hasTitle"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ext_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="修改手机号"
            android:lines="1"
            android:textColor="@color/color_maintext"
            android:textStyle="bold"
            android:textSize="@dimen/dp_18" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phone"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/txt_phone"
        android:layout_width="@dimen/dp_345"
        android:hint="请输入手机号"
        android:theme="@style/UpdateUserEditText"
        android:textColor="@color/md_black_1000"
        android:textColorHint="@color/textColor2"
        android:textSize="@dimen/dp_13"
        android:inputType="phone"
        android:layout_height="@dimen/dp_45"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yzm"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txt_yzm"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_345"
            android:hint="请输入验证码"
            android:theme="@style/UpdateUserEditText"
            android:textColor="@color/md_black_1000"
            android:textColorHint="@color/textColor2"
            android:textSize="@dimen/dp_13"
            android:inputType="number"
            android:maxLength="6"
            android:layout_height="@dimen/dp_45"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3AB065"
            android:text="获取验证码"
            android:textSize="@dimen/dp_12"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/btn_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="下一步"
        android:gravity="center"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/color_w"
        android:clickable="false"
        />

</LinearLayout>