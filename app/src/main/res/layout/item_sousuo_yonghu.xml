<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/color_w"
    >

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_below="@+id/line"
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
           android:layout_centerVertical="true"
            android:src="@mipmap/touxiang"
            />

        <LinearLayout
            android:id="@+id/firstline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阿萨德"
                android:textSize="@dimen/dp_14"
                android:textColor="#fffcaa14"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/secondline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/firstline"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/avatar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蛙跳账号:1233467"
                android:textColor="#ff686868"
                android:textSize="@dimen/dp_12"
                />

        </LinearLayout>


        <Button
            android:id="@+id/jiagaunzhu"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_border4"
            android:text="+ 关注"
            android:visibility="visible"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/yighuanzhu"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:background="@drawable/btn_border8"
            android:layout_centerHorizontal="true"
          >

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_9"
                android:src="@mipmap/duihao"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已关注"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_23"
                android:visibility="visible"
                android:textColor="#959595"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold"
                />


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/line"
        />

</RelativeLayout>