<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="@dimen/dp_0"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_154"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/zeroline"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30">

            <TextView
                android:id="@+id/dingdanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/dingdanhao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231231231"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dingdanhao"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/textColor5"
                />

            <TextView
                android:id="@+id/chulizhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理中"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_15"
                />

            <TextView
                android:id="@+id/chuliwancheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理完成"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="gone"
                />


        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_below="@+id/zeroline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/background2"
            />


        <RelativeLayout
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/pic"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_78"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                app:riv_corner_radius="@dimen/dp_4"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pic"
                android:layout_toRightOf="@+id/pic"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="户外探索跑步短裤户外探索跑户外探 索跑步短裤户外探索跑"
                android:textColor="@color/textColor4"
                android:textSize="@dimen/dp_14"
                />


            <TextView
                android:id="@+id/jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pic"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignBottom="@+id/pic"
                android:text="199"
                android:textColor="@color/red"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jifen"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_alignBaseline="@+id/jifen"
                android:text="积分"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/red"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@+id/jifen"
                android:layout_marginRight="@dimen/dp_15"
                android:text="x3"
                android:textColor="@color/textColor6"
                />


        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>