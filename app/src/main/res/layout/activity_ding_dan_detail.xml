<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor2"
    tools:context=".activity.DingDanDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="订单详情"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:background="#FF249FFF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">

                <TextView
                    android:id="@+id/zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:text="待发货"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/dp_16"
                    />

                  <ImageView
                      android:id="@+id/zhuangtai_pic"
                      android:layout_width="@dimen/dp_40"
                      android:layout_height="@dimen/dp_40"
                      android:src="@mipmap/daifahuo"
                      android:layout_alignParentEnd="true"
                      android:layout_marginRight="@dimen/dp_30"
                      android:layout_marginTop="@dimen/dp_15"
                      />


            </RelativeLayout>



            <RelativeLayout
                android:layout_below="@id/header"
                android:id="@+id/wuliu"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:background="@drawable/layout_border2"
                android:layout_height="@dimen/dp_76">


                <ImageView
                    android:id="@+id/yunshu_bg"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_18"
                    android:src="@mipmap/yunshuzhong"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    />

                <TextView
                    android:id="@+id/yunshu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的包裹已由物流公司揽收"
                    android:textColor="#ff3ab065"
                    android:textSize="@dimen/dp_14"
                    android:layout_toEndOf="@+id/yunshu_bg"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    />

                <TextView
                    android:layout_below="@+id/yunshu_text"
                    android:layout_width="123dp"
                    android:layout_height="17dp"
                    android:text="2019-08-12 13:00:34"
                    android:textColor="#ff959595"
                    android:textSize="12dp"
                    android:layout_toEndOf="@+id/yunshu_bg"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_16"
                    />


                <ImageView
                    android:src="@mipmap/arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_14"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/dizhi"
                android:background="@drawable/layout_border2"
                android:layout_below="@+id/wuliu"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_76">


                    <LinearLayout
                        android:id="@+id/firstline"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:layout_gravity="center"
                            android:textSize="@dimen/dp_14"
                            android:textColor="#FF1A1726"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18637280068"
                            android:layout_gravity="center"
                            android:textSize="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="#FF686868"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/firstline"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地址:"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/textColor6"
                            />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="河南筝安阳市中华路万达广场万达中心720"
                            android:textSize="@dimen/dp_12"
                            android:textColor="#FF959595"
                            />

                    </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/shangpin"
                android:layout_below="@+id/dizhi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_197"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/layout_border2"
                >


                <RelativeLayout
                    android:id="@+id/dingdan_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_78"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    >


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/dingdan_pic"
                        android:layout_width="@dimen/dp_78"
                        android:layout_height="@dimen/dp_78"
                        app:riv_corner_radius="@dimen/dp_4"
                        android:src="@mipmap/memgwa"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/dingdan_name"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_width="@dimen/dp_224"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_height="wrap_content"
                        android:text="户外探索跑步短裤户外探索跑户外探 索跑步短裤户外探索跑"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_14"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />


                    <TextView
                        android:id="@+id/biaozhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_10"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/danjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199"
                        android:layout_toEndOf="@+id/biaozhi"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="199"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_16"
                        android:layout_toEndOf="@+id/dingdan_pic"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_16"

                        />

                    <TextView
                        android:id="@+id/jifen_biaozhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:layout_toEndOf="@+id/jifen"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_alignParentBottom="true"
                        />


                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="×1"
                        android:textColor="#ff959595"
                        android:textSize="@dimen/dp_14"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>


                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#FFF4F4F4"
                    android:layout_below="@+id/dingdan_content"
                    android:layout_marginTop="@dimen/dp_16"
                    />


                <LinearLayout
                    android:id="@+id/jiesuan"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="right"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/dp_16"
                    >



                    <TextView
                        android:id="@+id/totalcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共3件商品"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_8"
                        />

                    <TextView
                        android:id="@+id/heji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计:"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_8"
                        />


                    <TextView
                        android:id="@+id/zongjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥236.55"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_14"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/jiesuan2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp_16"
                    >



                    <TextView
                        android:id="@+id/totalcount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共3件商品"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_8"
                        />

                    <TextView
                        android:id="@+id/heji2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计:"
                        android:textColor="#ff2e2d2d"
                        android:textSize="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_8"
                        />


                    <TextView
                        android:id="@+id/zongjifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="236.55"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_14"
                        android:layout_marginRight="@dimen/dp_3"
                        />

                    <TextView
                        android:id="@+id/jifenbiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="#ffed1c2f"
                        android:textSize="@dimen/dp_10"
                        />

                </LinearLayout>


                <Button
                    android:id="@+id/shouhou"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_30"
                    android:text="申请售后"
                    android:textColor="#FF2E2D2D"
                    android:textSize="@dimen/dp_12"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/btn_border8"
                    />


                <Button
                    android:id="@+id/pingjia"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_30"
                    android:text="评价"
                    android:textColor="#FF2E2D2D"
                    android:textSize="@dimen/dp_12"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/btn_border8"
                    android:layout_toLeftOf="@+id/shouhou"
                    android:visibility="gone"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/dingdanxinxi"
                android:background="@drawable/layout_border2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_155"
                android:layout_below="@+id/shangpin"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="#ff2e2d2d"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zhifufangshi"
                    android:text="支付方式:"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/dp_15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zhifufangshi_text"
                    android:text="积分"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_toEndOf="@+id/zhifufangshi"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="@dimen/dp_15"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dingdanbianhao"
                    android:text="订单编号:"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_below="@+id/zhifufangshi"
                    android:layout_marginTop="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dingdanbianhao_text"
                    android:text="2131231231231323"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_toEndOf="@+id/zhifufangshi"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@+id/zhifufangshi"
                    android:layout_marginTop="@dimen/dp_10"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fukuanshijian"
                    android:text="付款时间:"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_below="@+id/dingdanbianhao"
                    android:layout_marginTop="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fukuanshijian_text"
                    android:text="2019-01-20 18:21:54"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_toEndOf="@+id/zhifufangshi"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@+id/dingdanbianhao"
                    android:layout_marginTop="@dimen/dp_10"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fahuoshijian"
                    android:text="发货时间:"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_below="@+id/fukuanshijian"
                    android:layout_marginTop="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fahuoshijian_text"
                    android:text="2019-01-20 18:21:54"
                    android:textColor="#ff686868"
                    android:textSize="@dimen/dp_12"
                    android:layout_toEndOf="@+id/zhifufangshi"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@+id/fukuanshijian"
                    android:layout_marginTop="@dimen/dp_10"
                    />


                <Button
                    android:id="@+id/fuzhi"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_24"
                    android:text="复制"
                    android:textColor="#FF2E2D2D"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_56"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/btn_border8"
                    />


            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/caiyi_logo"
                android:layout_below="@+id/dingdanxinxi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_marginBottom="@dimen/dp_15"
                />

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>