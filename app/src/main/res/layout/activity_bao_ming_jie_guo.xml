<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_w"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="报名成功"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/baomingchenggong"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/baomingchengong"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="报名成功"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:gravity="center"
            />


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_below="@id/baomingchenggong"
        android:id="@+id/saishixiangqing"
        android:orientation="horizontal"
        android:background="@color/color_w"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_2"
        android:visibility="visible"
        android:foreground="?attr/selectableItemBackground"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赛事详情"
            android:textSize="@dimen/dp_14"
            android:textColor="#ff2e2d2d"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_below="@id/baomingchenggong"
        android:id="@+id/shangchuanshipin"
        android:background="@color/color_w"
        android:orientation="horizontal"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_2"
        android:visibility="visible"
        android:foreground="?attr/selectableItemBackground"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传视频"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/textColor4"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/baomingshibai"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_60"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="报名失败"
            android:textColor="@color/textColor4"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_gravity="center"
            android:text="网络或者其他状态支付导致支付失败"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/dp_12"
            android:gravity="left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_gravity="center"
            android:text="你可以重新支付"
            android:textColor="@color/textColor6"
            android:textSize="@dimen/dp_12"
            android:gravity="left"
            />

    </LinearLayout>



    <android.support.v7.widget.CardView
        android:id="@+id/kefu"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardElevation="@dimen/dp_2"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/textColor4"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_65"
        android:background="#FBF5D4"
        android:text="改地址方便您收到获奖奖品，请填写有效地址"
        android:textSize="@dimen/dp_12"
        android:gravity="center"
        android:textColor="#B2A470"
        android:visibility="visible"
        />


    <Button
        android:id="@+id/login"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/btn_border2"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="添加收货地址"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/color_w"
        />

    <RelativeLayout
        android:id="@+id/xuanzedizhihou"
        android:layout_below="@+id/baomingchenggong"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/baomingdizhi"
            app:cardCornerRadius="@dimen/dp_6"
            android:background="@color/color_w"
            app:cardElevation="@dimen/dp_0"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/firstline"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:layout_gravity="center"
                        android:textSize="@dimen/dp_15"
                        android:textColor="@color/textColor4"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18637280068"
                        android:layout_gravity="center"
                        android:textSize="@dimen/dp_14"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/textColor6"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/firstline"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址:"
                        android:textSize="@dimen/dp_12"
                        android:textColor="@color/textColor6"
                        />

                    <TextView
                        android:id="@+id/dizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="河南筝安阳市中华路万达广场万达中心720"
                        android:textSize="@dimen/dp_12"
                        android:textColor="@color/textColor6"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/edit"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/edit"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_3"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="编辑"
                        android:textSize="@dimen/dp_12"
                        android:textColor="@color/textColor5"
                        />



                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tips2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/baomingdizhi"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="#FBF5D4"
            android:text="改地址方便您收到获奖奖品，请填写有效地址"
            android:textSize="@dimen/dp_12"
            android:gravity="center"
            android:textColor="#B2A470"
            android:visibility="visible"
            />

        <android.support.v7.widget.CardView
            android:layout_below="@id/tips2"
            android:id="@+id/saishixiangqing2"
            android:orientation="horizontal"
            android:background="@color/color_w"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_15"
            app:cardElevation="@dimen/dp_2"
            android:visibility="visible"
            android:foreground="?attr/selectableItemBackground"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赛事详情"
                android:textSize="@dimen/dp_14"
                android:textColor="#ff2e2d2d"
                android:layout_gravity="center"
                />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_below="@id/tips2"
            android:id="@+id/shangchuanshipin2"
            android:background="@color/color_w"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            app:cardCornerRadius="@dimen/dp_15"
            app:cardElevation="@dimen/dp_2"
            android:visibility="visible"
            android:foreground="?attr/selectableItemBackground"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传视频"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/textColor4"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

    </RelativeLayout>



</RelativeLayout>