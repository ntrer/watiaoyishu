<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/saishi_pic"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_82"
        app:riv_corner_radius="@dimen/dp_4"
        android:src="@mipmap/memgwa"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/saishi_name"
        android:layout_toEndOf="@+id/saishi_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年第十届少儿唱比赛16强"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#ff2e2d2d"
        android:textSize="@dimen/dp_14"
        />



    <TextView
        android:id="@+id/saishi_time"
        android:layout_below="@+id/saishi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/saishi_pic"
        android:text="2018. 08.13 ~ 2018. 09.22"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#ff959595"
        android:textSize="@dimen/dp_12"
        />


    <LinearLayout
        android:id="@+id/dizhi"
        android:layout_toEndOf="@+id/saishi_pic"
        android:layout_below="@+id/saishi_time"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/zuobiao_img"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:src="@mipmap/zuobiao"
            />


        <TextView
            android:id="@+id/zuibiao_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="北京"
            android:textColor="#ff686868"
            android:textSize="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_5"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/jiage"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/saishi_time"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_16"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="12dp"
            android:layout_height="17dp"
            android:text="￥"
            android:textColor="#ffed1c2f"
            android:textSize="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="#ffed1c2f"
            android:textSize="@dimen/dp_18"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/mianfei"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/saishi_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:text="免费"
        android:textColor="#ff3ab065"
        android:textSize="@dimen/dp_14"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="#fff4f4f4"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>