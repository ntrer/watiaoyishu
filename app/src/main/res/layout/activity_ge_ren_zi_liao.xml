<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor2"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarStyle"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人资料"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/baocun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="保存"
            android:textColor="@color/color_w"
            android:textSize="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            />

    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/xuanzetouxiang"
                android:layout_marginTop="@dimen/dp_34"
                />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="点击添加头像"
                android:layout_below="@+id/logo"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/dp_12"
                android:textColor="#FF2E2D2D"
                />


            <LinearLayout
                android:layout_below="@+id/tips"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/color_w"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/nicheng"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户昵称"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FF1A1726"
                        />


                    <com.watiao.yishuproject.ui.SLEditTextView
                        android:layout_width="@dimen/dp_200"
                        android:id="@+id/txt_name"
                        android:hint="输入昵称"
                        android:layout_alignParentEnd="true"
                        android:gravity="end|center"
                        android:layout_centerVertical="true"
                        android:textColor="#FF2E2D2D"
                        android:textColorHint="@color/textColor2"
                        android:textCursorDrawable="@drawable/my_cursor2"
                        android:background="@null"
                        android:textSize="@dimen/dp_14"
                        android:inputType="text"
                        android:layout_height="match_parent"/>


                    <TextView
                        android:id="@+id/nichdeng"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="end|center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/md_black_1000"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <View
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/backgroundColor"
                    />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/shoujihao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FF1A1726"
                        />


                    <com.watiao.yishuproject.ui.SLEditTextView
                        android:layout_width="@dimen/dp_200"
                        android:id="@+id/txt_phone"
                        android:hint="输入手机号"
                        android:layout_alignParentEnd="true"
                        android:gravity="end|center"
                        android:layout_centerVertical="true"
                        android:textColor="#FF2E2D2D"
                        android:textColorHint="@color/textColor2"
                        android:textCursorDrawable="@drawable/my_cursor2"
                        android:background="@null"
                        android:textSize="@dimen/dp_14"
                        android:inputType="phone"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/phone_num"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="end|center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/md_black_1000"
                        android:visibility="gone"
                        />


                </RelativeLayout>

                <View
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/backgroundColor"
                    />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/bangdingweixin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绑定微信"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FF1A1726"
                        />


                    <TextView
                        android:id="@+id/bangding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未绑定"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/textColor2"
                        android:layout_marginRight="@dimen/dp_18"
                        />


                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:background="@color/backgroundColor"
                    />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/chengshi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="城市"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FF1A1726"
                        />

                    <TextView
                        android:id="@+id/qingxuanze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColorHint="@color/textColor2"
                        android:layout_marginRight="@dimen/dp_18"
                        />


                    <ImageView
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/backgroundColor"
                    />

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/guigongzhanghao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60">

                    <TextView
                        android:id="@+id/zhanghao_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鬼工账号"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FF1A1726"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(只允许修改一次)"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/dp_12"
                        android:textColor="#FF959595"
                        android:layout_below="@+id/zhanghao_title"
                        />

                    <!--<TextView-->
                    <!--android:id="@+id/zhanghao"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="gg123456"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:textColor="@color/textColor4"-->
                    <!--/>-->

                    <com.watiao.yishuproject.ui.SLEditTextView
                        android:layout_width="@dimen/dp_200"
                        android:id="@+id/zhanghao_edit"
                        android:layout_alignParentEnd="true"
                        android:gravity="end|center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/md_black_1000"
                        android:textColorHint="@color/textColor2"
                        android:textCursorDrawable="@drawable/my_cursor2"
                        android:background="@null"
                        android:textSize="@dimen/dp_13"
                        android:inputType="text"
                        android:layout_height="match_parent"/>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>